<script>
    CheckReligion();

    $(document).on("change", "#religion_id", function () {
        CheckReligion();
    });

    function CheckReligion() {
        if ($("#religion_id").is(":checked")) {
            $("#religion_value").removeAttr("disabled");
        }
        else {
            $("#religion_value").attr("disabled", true);
        }
    }

</script>
