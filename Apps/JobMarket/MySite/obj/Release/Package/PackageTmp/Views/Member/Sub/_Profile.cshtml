                    <option value="0">@UserWebResource.LB_SELECT_REGION</option>

                    @*@if (Model.Regions.HasData())
                        {
                            foreach (var region in Model.Regions)
                            {
                                <option value="@region.id">@region.furigana (@region.region)</option>
