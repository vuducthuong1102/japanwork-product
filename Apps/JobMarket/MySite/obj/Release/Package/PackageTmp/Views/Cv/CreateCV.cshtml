@using MySite.Helpers
@using MySite.Resources
@model MySite.Models.CvUpdateModel

@{
    ViewBag.Title = UserWebResource.LB_CREATE_CV;
    var currentUser = AccountHelper.GetCurrentUser();
    var userName = string.Empty;
    if (currentUser != null)
    {
        userName = AccountHelper.ShowDisplayName(currentUser);
    }
}

@Html.Partial("../Widgets/Modals/_DefaultModal")

<section class="overlape">
    <div class="block no-padding">
        <div data-velocity="-.1" style="background: url(/Content/themes/default/images/resource/mslider1.jpg) repeat scroll 50% 422.28px transparent;" class="parallax scrolly-invisible no-parallax"></div><!-- PARALLAX BACKGROUND IMAGE -->
        <div class="container fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-header">
                        <h3>@UserWebResource.LB_WELCOME @userName</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="block no-padding">
        <div class="container">
            <div class="row no-gape">
                <aside class="col-lg-3 column border-right hidden-sm-down">
                    <div class="widget">
                        <div class="tree_widget-sec">
                            @Html.Partial("~/Views/Widgets/Items/Profile/_LeftMenu.cshtml", "cv")
                        </div>
                    </div>
                </aside>
                <div class="col-lg-9 column">
                    <div class="padding-left mb40">
                        <form id="frmCv" enctype="multipart/form-data" action="/Cv/CreateCV" method="post">
                            @Html.AntiForgeryToken()                            
                            @Html.HiddenFor(m=>m.form)                    
                            <div id="accordion">
                                <div class="card mb5">
                                    <div class="card-header" id="heading-1">
                                        <h5 class="mb-0">
                                            <a class="collapsed" role="button" data-toggle="collapse" href="#collapse-1" aria-expanded="true" aria-controls="collapse-1">
                                                @UserWebResource.LB_GENERAL_INFO
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapse-1" class="collapse show" data-parent="#accordion" aria-labelledby="heading-1">
                                        <div class="card-body">
                                            <div>
                                                <div class="social-edit mb20">
                                                    <h3 class="mt0">@UserWebResource.LB_CV_INFO</h3>
                                                    <div class="row pl30">
                                                        <div class="col-lg-6">
                                                            <span class="pf-title">@UserWebResource.LB_TITLE</span>
                                                            <div class="pf-field">
                                                                @Html.TextBoxFor(m => m.title, new { @class = "mb0" })
                                                                @Html.ValidationMessageFor(m => m.title, null, new { @class = "text-danger fz-13" })
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <span class="pf-title">@UserWebResource.LB_CREATED_DATE</span>
                                                            <div class="pf-field">
                                                                @Html.TextBoxFor(m => m.created_date, new { @class = "datepicker" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            @*<div id="MemberSubContainer" style="min-height:100px" data-current="profile">

                                            </div>*@

                                            <div id="MemberSubContainer" style="min-height:100px" data-current="profile">
                                                @Html.Partial("Sub/_Profile", Model)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card mb5">
                                    <div class="card-header" id="heading-2">
                                        <h5 class="mb-0">
                                            <a class="collapsed" role="button" data-toggle="collapse" href="#collapse-2" aria-expanded="true" aria-controls="collapse-2">
                                                @UserWebResource.LB_EDUCATION_HISTORY
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapse-2" class="collapse show" data-parent="#accordion" aria-labelledby="heading-2">
                                        <div class="card-body">
                                            <div class="row mb10">
                                                <div class="col-md-12 text-center">
                                                    @*<a href="javascript:;" class="text-danger" data-href="/Member/Resume" data-modal-direct="" title=""><i class="fa fa-plus btn-icon-danger"></i> @UserWebResource.LB_ADD_EDUCATION</a>*@
                                                    <a class="text-danger" href="/Member/Resume" title=""><i class="fa fa-pencil btn-icon-danger"></i> @UserWebResource.LB_UPDATE</a>
                                                </div>
                                            </div>
                                            <div id="EduHistories" data-current="profile">

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card mb5">
                                    <div class="card-header" id="heading-3">
                                        <h5 class="mb-0">
                                            <a class="collapsed" role="button" data-toggle="collapse" href="#collapse-3" aria-expanded="true" aria-controls="collapse-3">
                                                @UserWebResource.LB_WORK_EXPERIENCE
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapse-3" class="collapse show" data-parent="#accordion" aria-labelledby="heading-3">
                                        <div class="card-body">
                                            <div class="row mb10">
                                                <div class="col-md-12 text-center">
                                                    @*<a href="javascript:;" class="text-danger" data-href="/Cv/UpdateCvWorkHistory" data-modal-direct="" title=""><i class="fa fa-plus btn-icon-danger"></i> @UserWebResource.LB_ADD_WORK_EXPERIENCE</a>*@
                                                    <a class="text-danger" href="/Member/Resume" title=""><i class="fa fa-pencil btn-icon-danger"></i> @UserWebResource.LB_UPDATE</a>
                                                </div>
                                            </div>

                                            <div id="WorkHistories" data-current="">

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card mb5">
                                    <div class="card-header" id="heading-4">
                                        <h5 class="mb-0">
                                            <a class="collapsed" role="button" data-toggle="collapse" href="#collapse-4" aria-expanded="true" aria-controls="collapse-4">
                                                @UserWebResource.LB_CERTIFICATE
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapse-4" class="collapse show" data-parent="#accordion" aria-labelledby="heading-4">
                                        <div class="card-body">
                                            <div class="row mb10">
                                                <div class="col-md-12 text-center">
                                                    @*<a href="javascript:;" class="text-danger" data-href="/Cv/UpdateCvCertificate" data-modal-direct="" title=""><i class="fa fa-plus btn-icon-danger"></i> @UserWebResource.LB_ADD_CERTIFICATE</a>*@
                                                    <a class="text-danger" href="/Member/Resume" title=""><i class="fa fa-pencil btn-icon-danger"></i> @UserWebResource.LB_UPDATE</a>
                                                </div>
                                            </div>

                                            <div id="Certificates" data-current="">

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card mb5">
                                    <div class="card-header" id="heading-5">
                                        <h5 class="mb-0">
                                            <a class="collapsed" role="button" data-toggle="collapse" href="#collapse-5" aria-expanded="true" aria-controls="collapse-5">
                                                @UserWebResource.LB_ADDITIONAL_INFORMATION
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapse-5" class="collapse show" data-parent="#accordion" aria-labelledby="heading-5">
                                        <div class="card-body">
                                            @if (Model.form == 0)
                                            {
                                                <div id="CvMoreInfo" data-current="">
                                                    <div class="social-edit mb20">
                                                        <div class="row pl10">
                                                            <div class="col-lg-12">
                                                                <span class="pf-title">@UserWebResource.LB_HOBBIES_SKILLS</span>
                                                                <div class="pf-field">
                                                                    @Html.TextAreaFor(m => m.hobby_skills, new { @class = "mb0" })
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row pl10">
                                                            <div class="col-lg-12">
                                                                <span class="pf-title">@UserWebResource.LB_PR_YOURSELF</span>
                                                                <div class="pf-field">
                                                                    @Html.TextAreaFor(m => m.pr, new { @class = "mb0" })
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row pl10">
                                                            <div class="col-lg-12">
                                                                <span class="pf-title">@UserWebResource.LB_REASON_FOR_APPLYING</span>
                                                                <div class="pf-field">
                                                                    @Html.TextAreaFor(m => m.reason, new { @class = "mb0" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div id="CvMoreInfo" data-current="">
                                                    <div class="social-edit mb20">
                                                        <div class="row pl10">
                                                            <div class="col-lg-12">
                                                                <span class="pf-title">@UserWebResource.LB_REASON_FOR_APPLYING</span>
                                                                <div class="pf-field">
                                                                    @Html.TextAreaFor(m => m.reason, new { @class = "mb0" })
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row pl10">
                                                            <div class="col-lg-12">
                                                                <span class="pf-title">@UserWebResource.LB_PR_YOURSELF</span>
                                                                <div class="pf-field">
                                                                    @Html.TextAreaFor(m => m.pr, new { @class = "mb0" })
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row pl10">
                                                            <div class="col-lg-12">
                                                                <span class="pf-title">@UserWebResource.LB_TIME_CAN_WORK</span>
                                                                <div class="pf-field">
                                                                    @Html.TextAreaFor(m => m.time_work, new { @class = "mb0" })
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row pl10">
                                                            <div class="col-lg-12">
                                                                <span class="pf-title">@UserWebResource.LB_ASPIRATION</span>
                                                                <div class="pf-field">
                                                                    @Html.TextAreaFor(m => m.aspiration, new { @class = "mb0" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="row pl10">
                                <div class="col-lg-12" id="btnSave">
                                    <a class="btn btn-danger float-left" href="/Member/MyCv"><i class="fa fa-arrow-left"></i> @UserWebResource.BT_CANCEL</a>
                                    <button type="submit" class="btn btn-info float-right"><i class="fa fa-floppy-o"></i> @UserWebResource.BT_SAVE</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section PageInlineStyles{
    <style>
        #accordion {
            padding: 40px 0px 0px 10px;
        }

        #accordion .profile-title h3 {
            margin-top: 0px;
        }

        .card-header h5 {
            font-size: 22px;
            font-weight: bold;
            color: #8b91dd;
        }

        .mb-0 > a {
            display: block;
            position: relative;
        }

        .mb-0 > a:after {
            content: "\f078"; /* fa-chevron-down */
            font-family: 'FontAwesome';
            position: absolute;
            right: 0;
        }

        .mb-0 > a[aria-expanded="true"]:after {
            content: "\f077"; /* fa-chevron-up */
        }

        h3 {
            margin-left: 0px !important;
            padding-left: 0px !important;
        }      
    </style>
}

@section PageInlineScripts{
    <script src="@Url.VersionedContent("~/Scripts/Pages/Cv/create.js")"></script>
}