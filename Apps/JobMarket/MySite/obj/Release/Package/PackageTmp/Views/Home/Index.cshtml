@using MySite.Resources
@using MySite.Helpers

@using MySite.Caching
@{
    ViewBag.Title = UserWebResource.LB_HOME_SLOGAN_TITLE_2;
    var hasLoggedIn = User.Identity.IsAuthenticated;
}

<section>
    <div class="block no-padding">
        <div class="container fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-featured-sec">
                        <div class="new-slide">
                            <img src="~/Content/themes/default/images/resource/vector-1.png">
                        </div>
                        <div class="job-search-sec">
                            <div class="job-search">
                                <h3 class="hidden-xs-down">@UserWebResource.LB_HOME_SLOGAN_TITLE_1</h3>
                                <span class="">@UserWebResource.LB_HOME_SLOGAN_TITLE_2</span>

                                <div id="SearchJobBox">

                                </div>
                            </div>
                        </div>
                        <div class="scroll-to">
                            <a href="#scroll-here" title=""><i class="la la-arrow-down"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="scroll-here">
    <div class="block">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div id="category_list">
                    </div>
                </div>
                @*<div class="col-lg-12">
                        <div class="browse-all-cat">
                            <a href="/job/search" title="">Browse All Categories</a>
                        </div>
                    </div>*@
            </div>
        </div>
    </div>
</section>

<section>
    <div class="block double-gap-top double-gap-bottom">
        <div data-velocity="-.1" style="background: url(images/resource/parallax1.jpg) repeat scroll 50% 422.28px transparent;" class="parallax scrolly-invisible layer color"></div><!-- PARALLAX BACKGROUND IMAGE -->
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="simple-text-block">
                        <h3>@UserWebResource.LB_HOME_MAKE_DIFFERENCE</h3>

                        @if (hasLoggedIn)
                        {
                            <span>@UserWebResource.LB_HOME_MAKE_DIFFERENCE_CREATE_NEW_CV</span>
                            <a data-href="/Cv/CvCreationMethod" data-modal-direct="" title="">@UserWebResource.LB_HOME_MAKE_DIFFERENCE_BT_CREATE_NEW_CV</a>
                        }
                        else
                        {
                            <span>@UserWebResource.LB_HOME_MAKE_DIFFERENCE_CREATE_ACCOUNT</span>
                            <a href="/WebAuth/Register" title="">@UserWebResource.BT_REGISTER</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="block">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="heading">
                        <h2>@UserWebResource.LB_HOME_NEWEST_JOBS</h2>
                        <span>@UserWebResource.LB_HOME_NEWEST_JOBS_DES</span>
                    </div><!-- Heading -->
                    <div class="job-listings-sec">
                        <div id="list-hot-jobs">

                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="browse-all-cat">
                        <a href="/job/search" title="" class="fz-18"><i class="la la-search-plus"></i> @UserWebResource.BT_EXPLORER_MORE</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="block remove-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="heading">
                        <h2>How It Works</h2>
                        <span>
                            Each month, more than 7 million Jobhunt turn to website in their search for work, making over <br>160,000 applications every day.
                        </span>
                    </div><!-- Heading -->
                    <div class="how-to-sec style2">
                        <div class="how-to">
                            <span class="how-icon"><i class="la la-user"></i></span>
                            <h3>Register an account</h3>
                            <p>Post a job to tell us about your project. We'll quickly match you with the right freelancers.</p>
                        </div>
                        <div class="how-to">
                            <span class="how-icon"><i class="la la-file-archive-o"></i></span>
                            <h3>Specify &amp; search your job</h3>
                            <p>Browse profiles, reviews, and proposals then interview top candidates. </p>
                        </div>
                        <div class="how-to">
                            <span class="how-icon"><i class="la la-list"></i></span>
                            <h3>Apply for job</h3>
                            <p>Use the Upwork platform to chat, share files, and collaborate from your desktop or on the go.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

