@using MySite.Resources
@using MySite.Helpers
@model MySite.Models.InvitationActionModel

<div class="modal-header">
    <h5 class="modal-title fz-16" id="exampleModalLabel">
        <i class="fa fa-check fz-16"></i> @UserWebResource.LB_CONFIRM_ACCEPT_INVITATION
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">
            &times;
        </span>
    </button>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.id)
    @Html.HiddenFor(m=>m.job_id)
    <div class="modal-footer">
        <button type="button" class="btn btn-outline-info mr-auto" data-dismiss="modal">
            <i class="fa fa-remove"></i> @UserWebResource.LB_NO
        </button>
        <button type="submit" class="btn btn-info">
            <i class="fa fa-check"></i> @UserWebResource.BT_ALLOW
        </button>
    </div>
}