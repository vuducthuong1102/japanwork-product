@using MySite.Resources;
@using MySite.Helpers;
@using MySite.Caching;
@model MySite.Models.Account.ProfileModel

@{
    var isOwner = false;
    var currentUser = AccountHelper.GetCurrentUser();
    var tabClass = "two-columns";
    if (Model.UserInfo != null)
    {
        if (currentUser != null)
        {
            if (currentUser.Id == Model.UserInfo.Id)
            {
                isOwner = true;
                tabClass = "three-columns";
            }
        }
    }
}

<div class="container mt15">
    <div class="row">
        <div class="col-md-8 col-sm-7">
            <ul class="nav nav-tabs tab-profile">
                <li class="active @tabClass"><a data-toggle="tab" href="#trip-post-profile"><span id="PostsCount">0</span> <br />@UserWebResource.LB_TRIP_POST</a></li>
                <li class="@tabClass"><a data-toggle="tab" href="#photo-profile"><span id="PhotosCount">0</span> <br />@UserWebResource.LB_PHOTO</a></li>
                @if (isOwner)
                {
                    <li class="@tabClass"><a data-toggle="tab" href="#save-profile"><span id="SavedCount">0</span> <br />@UserWebResource.LB_SAVED</a></li>
                }

            </ul>

            <div class="tab-content">
                <input type="hidden" id="PostedCounter" value="1" />
                <input type="hidden" id="UploadedImagesCounter" value="1" />
                <input type="hidden" id="SavedCounter" value="1" />
