@using MySite.Resources;
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1 class="text-danger">
                    Oops!
                </h1>
                <h2 class="text-danger">
                    401 Unauthorized
                </h2>
                <div class="error-details">
                    <h4>
                        @UserWebResource.COMMON_ERROR_NO_LOGIN
                    </h4>
                </div>
                <div class="error-actions">
                    <a href="/webauth/login" class="btn btn-primary btn-lg">
                        <span class="glyphicon glyphicon-user"></span>
                        @UserWebResource.BT_LOGIN
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="theme-layout" id="scrollup">
    <section>
        <div class="block no-padding">
            <div class="container fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="main-featured-sec witherror">
                            <ul class="main-slider-sec text-arrows">
                                <li><img src="/Content/themes/default/images/resource/mslider3.jpg" alt="" /></li>
                                <li><img src="/Content/themes/default/images/resource/mslider2.jpg" alt="" /></li>
                                <li><img src="/Content/themes/default/images/resource/mslider1.jpg" alt="" /></li>
                            </ul>
                            <div class="error-sec">
                                <div>
                                    <h3 style="color:#fff;font-size: 120px;">401</h3>
                                </div>
                                <span>@UserWebResource.COMMON_ERROR_NO_LOGIN</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>