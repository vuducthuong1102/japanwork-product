@using MySite.Resources
@using MySite.Helpers
@model MySite.Models.JobInviteFriendApplyModel

<div class="modal-header">
    <h5 class="modal-title fz-20" id="exampleModalLabel">
        <i class="fa fa-user-plus fz-20"></i> @UserWebResource.LB_INVITE_FRIEND_APPLY_JOB
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">
            &times;
        </span>
    </button>
</div>

@using (Html.BeginForm("InviteFriend", "Job", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.job_id)
    @Html.HiddenFor(m=>m.token)
    <div class="modal-body">
        <div class="form-group row">
            <div class="col-md-2">
                <label class="base-label">@UserWebResource.IP_EMAIL</label>
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m=>m.email, new { @class="form-control" })
                @Html.ValidationMessageFor(m=>m.email, null, new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group row">
            <div class="col-md-2">
                <label class="base-label">@UserWebResource.LB_NOTE</label>
            </div>
            <div class="col-md-10">
                <textarea class="form-control" rows="7" style="resize:none;" name="@Html.IdFor(m=>m.note)"></textarea>
            </div>
        </div>*@
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline-info mr-auto" data-dismiss="modal">
            <i class="fa fa-remove"></i> @UserWebResource.BT_CANCEL
        </button>
        <button type="submit" class="btn btn-info">
            <i class="fa fa-paper-plane"></i> @UserWebResource.BT_SEND
        </button>
    </div>
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
