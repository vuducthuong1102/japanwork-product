@using MySite.Helpers;
@using MySite.Resources;
@using ApiMySiteSocial.DB.Sql.Entities
@model List<IdentityPost>

@if (Model != null && Model.Count > 0)
{
    <p class="fz-18 ml15 mb15 text-bold">@UserWebResource.LB_RECENT_POST</p>
    @RenderPostList()
}

@helper RenderPostList()
    {
        foreach (var item in Model)
        {
           
            @RenderRecentPostItem(item)
        }
}

@helper RenderRecentPostItem(IdentityPost item)
    {
        <div class="item">
            <div class="col-xs-10 traverler padr0">
                <a href="@AccountHelper.GetUserProfileUrl(item)" title="@item.DisplayName">
                    <img src="@CdnHelper.CoreGetFullImgPath(item.Avatar)" alt="avatar" class="avatar" />
                </a>
                <a href="@PostHelper.GetFriendlyUrl(item)" title="@item.Title">
                    <p class="text-bold title">@HtmlHelpers.ShowHtmlTextByLimit(item.Title,50)</p>
                </a>
                <p class="cl01 mr0 fz-13">@PostHelper.ParseTitleMetaFromPost(item)</p>
            </div>
            <div class="col-xs-2 folow text-right">
                <span class="rate">@item.RatingScore</span>
            </div>
            <div class="clearfix"></div>
        </div>
}