@model MySite.Models.PaymentViewModel

@{
    ViewBag.Title = "Trang thanh toán";
}

<!-- Header Start -->
<header id="wt-header" class="wt-header wt-haslayout">
    <div class="wt-navigationarea">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <strong class="wt-logo">
                        <a href="/">
                            <img width="200" src="/Content/themes/default/images/logo.svg" alt="Pfood" class="wt-logo__img">
                            <img width="40" src="/Content/themes/default/images/logo_m.svg" alt="Pfood" class="wt-logo__img wt-logo__img--xs">
                        </a>
                    </strong>

                    @Html.AntiForgeryToken()
                    @using (Html.BeginForm("search", "reportboom", null, FormMethod.Get, new { role = "form", @class = "wt-formtheme wt-formbanner wt-formbannervtwo", @id = "form-search" }))
                    {
                        <fieldset>
                            <div class="form-group">
                                <input type="text" name="Keyword" value="" id="search-boom" class="form-control" placeholder="Nhập số điện thoại/tên">
                                <div class="wt-formoptions">
                                    <button type="submit" class="wt-searchbtn"><i class="lnr lnr-magnifier"></i></button>
                                </div>
                            </div>
                        </fieldset>
                    }
                    <a href="javascript:;" class="btn-search-xs"><i class="fa fa-search"></i></a>
                    
                    @Html.Partial("_NavigationMenu")
                </div>
            </div>
        </div>
    </div>
</header>
<!--Header End-->

<!--Inner Home Banner Start-->
<div class="wt-haslayout wt-innerbannerholder" style="background-image: url(/Content/themes/default/images/bannerimg/banner-img.jpg)">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-xs-12 col-sm-12">
                <div class="wt-innerbannercontent">
                    <div class="wt-title"><h2>Thanh toán</h2></div>
                    <ol class="wt-breadcrumb">
                        <li><a href="/">Trang chủ</a></li>
                        <li class="wt-active">Thanh toán</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Inner Home End-->


@if (Model.CurrentStep == 2)
{
    @Html.Partial("CheckoutStep2")
}
else if (Model.CurrentStep == 3)
{
    @Html.Partial("CheckoutStep3")
}
else
{
    @Html.Partial("CheckoutStep1")
}

@section PageInlineStyles{
    <style>
        .popup-processing {
            position: fixed;
            width: 45%;
            padding: 20px;
            background-color: #fff;
            margin: 5% auto;
            left: 0;
            top: 25%;
            right: 0;
            z-index: 999999999;
        }
    </style>    
}

@section PageInlineScripts{
    <script>
        $(function () {
            ScrollToElement($(".form-confirm"));
        })
    </script>    
}