@model MySite.Models.WebVerifyOTPModel
@using MySite.Settings;
@using CaptchaMvc.HtmlHelpers
@using MySite.Resources;

@{
    Layout = null;
}

<!DOCTYPE html>
<meta charset="UTF-8">
<html lang="en">
<head>
    <title>MySite</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--Core CSS-->
    <link href="~/Content/themes/default/assets/plugin/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/themes/default/assets/css/main.css" rel="stylesheet" />
    @*<link href="~/Content/themes/default/assets/css/frontend/common/template.css" rel="stylesheet" />*@
    <link href="~/Content/themes/default/assets/css/frontend/common/login.css" rel="stylesheet" />
    <link href="~/Content/themes/default/assets/css/icon.css" rel="stylesheet" />
    <link href="~/Content/themes/default/assets/css/font-awesome.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Content/themes/default/assets/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container container-lg">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse-menu" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><i class="i1 iq"></i></a>
            </div>
            <div class="collapse navbar-collapse" id="collapse-menu">
                <ul class="nav navbar-nav account-info">
                    <!--<li class="dropdown active">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="icon-setting"></i></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Action</a></li>
                                <li><a href="#">Another action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                            </ul>
                        </li>
                        <li><a href="#"><i class="icon-personal"></i></a></li>
                        <li><a href="#"><i class="icon-messenger"></i></a></li>
                        <li><a href="#"><i class="icon-notification"></i></a></li>-->
                </ul>
                <form class="navbar-form navbar-left">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="@UserWebResource.IP_SEARCH">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button"><i class="icon-search tophead-search-icon"></i></button>
                        </span>
                    </div>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li class="active">
                        <a href="#">
                            <i class="icon icon-tripfeed-menu"></i> @UserWebResource.BT_TRIP_FEED
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="icon icon-discover-menu"></i> @UserWebResource.BT_DISCOVER
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="icon icon-plantrip-menu"></i> @UserWebResource.BT_PLAN_YOUR_TRIP
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="login" class="main-bg-color container-fluid">
        <div class="row">

            <div class="col-md-6 col-sm-6 col-lg-6 d-none d-sm-block login-left">
                <img src="~/Content/themes/default/assets/images/login/icon_background.png" />
                <div class="text-slogan">
                    @Html.Raw(UserWebResource.LB_SLOGAN)
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6  login-right">
                <div class="frm-register">
                    <div class="col-md-8 col-sm-12 col-lg-5 login-content">
                        @using (Html.BeginForm("VerifyOTP", "WebAuth", null, FormMethod.Post, new { role = "form" }))
                        {
                            <div class="form-group login-img-user">
                                <img src="~/Content/themes/default/assets/images/login/icon_logo.png" class="logo-img-halo" />
                            </div>
                            <div class="form-group text-center">
                                <label class="lb text-center">
                                    @Html.Raw(UserWebResource.LB_REGISTER_SLOGAN_CREATE)
                                </label>
                            </div>
                            <br />

                            @Html.Partial("_Notifications")
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.UserId)
                            @Html.HiddenFor(m => m.TokenKey)
                            @Html.HiddenFor(m => m.PhoneNumber)
                            @Html.HiddenFor(m => m.OTPType)
                            @Html.HiddenFor(m => m.ActionType)

                            <div class="form-group">
                                @Html.LabelFor(m => m.OTPCode)
                                @Html.TextBoxFor(m => m.OTPCode, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.OTPCode, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block btn-register">@UserWebResource.BT_CONFIRM</button>
                            </div>
                        }                            
                    </div>
                </div>
            </div>        
        </div>
    </div>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>