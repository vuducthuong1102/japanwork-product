@using Manager.WebApp.Resources
@using Manager.WebApp.Caching;
@using Manager.SharedLibs;

@{
    var currentLang = UserCookieManager.GetCurrentLanguageOrDefault();
    var typeList = TypeJobSeekerProvider.GetLists();
}
@if (Model.type == 2)
{
    <input type="hidden" class="title-search" value="@ManagerResource.PH_JOB_PROCESS_SEARCH" />
    <div class="form-group m-form__group row">
        <div class="col-md-6">
            <select class="form-control btn-white selectpicker-search filter-search" id="type_job_seeker" name="type_job_seeker">
                <option value="-1">
                    @ManagerResource.LB_SELECT_TYPE_JOB_SEEKER
                </option>
                @if (typeList.HasData())
                {
                    foreach (var item in typeList)
                    {
                        var selected = "selected";
                        if (item.Id != Model.type_job_seeker)
                        {
                            selected = "";
                        }
                        <option value="@item.Id" @selected>@item.TypeName</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-6">
            <select class="form-control selectpicker-search btn-white filter-search" id="sub_id" name="sub_id" data-live-search="true" data-size="7">
                <option value="-1">
                    @ManagerResource.LB_SELECT_SUB_FIELD
                </option>
                @if (Model.SubFields != null && Model.SubFields.Count > 0)
                {
                    foreach (var item in Model.SubFields)
                    {
                        var selected = "selected";
                        if (item.id != Model.sub_id)
                        {
                            selected = "";
                        }
                        <option value="@item.id" @selected>@item.sub_field</option>
                    }
                }
            </select>
        </div>
    </div>
}
else
{
    <input type="hidden" class="title-search" value="@ManagerResource.PH_JOB_SEEKER_PROCESS_SEARCH" />

    <div class="form-group row">
        <div class="col-md-6">
            <select class="filter-search form-control selectpicker-search btn-white" id="type_job_seeker" name="type_job_seeker">
                <option value="-1">
                    @ManagerResource.LB_SELECT_TYPE_JOB_SEEKER
                </option>
                @if (typeList.HasData())
                {
                    foreach (var item in typeList)
                    {
                        var selected = "selected";
                        if (item.Id != Model.type_job_seeker)
                        {
                            selected = "";
                        }
                        <option value="@item.Id" @selected>@item.TypeName</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-6">
            <select class="filter-search form-control selectpicker-search btn-white" id="japanese_level_number" name="japanese_level_number">
                <option value="-1">
                    @ManagerResource.LB_SELECT_JAPANESE_LEVEL
                </option>
                @if (Model.JapaneseLevels != null && Model.JapaneseLevels.Count > 0)
                {
                    foreach (var item in Model.JapaneseLevels)
                    {
                        var selected = "selected";
                        if (item.id != Model.japanese_level)
                        {
                            selected = "";
                        }
                        <option value="@item.id" @selected>@item.level</option>
                    }
                }
            </select>
        </div>
    </div>
}
<div class="form-group row">
    <div class="col-md-6">
        <select id="status_id" name="status_id" data-live-search="true" class="form-control m-select2-search m-input m-input--square filter-search" data-size="7">
            <option value="0"> @ManagerResource.LB_SELECT__PROCESS_STATUS</option>
            @if (Model.ProcessStatuses != null && Model.ProcessStatuses.Count > 0)
            {
                foreach (var item in Model.ProcessStatuses)
                {
                    <option value="@item.id">
                        @item.status_name
                    </option>
                }
            }
        </select>
    </div>
    <div class="col-md-6">
        <select id="staff_id" name="staff_id" data-live-search="true" class="filter-search form-control m-select2-search m-input m-input--square">
            <option value="0">@ManagerResource.LB_SELECT_PIC</option>
            @if (Model.Staffs != null && Model.Staffs.Count > 0)
            {
                foreach (var item in Model.Staffs)
                {
                    <option value="@item.StaffId" @(Model.staff_id == item.StaffId ? "selected" : "")>
                        @item.FullName
                    </option>
                }
            }
        </select>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <button type="button" class="btn btn-info float-right btn-sm btn-search">
            <i class="fa fa-search"></i> @ManagerResource.LB_SEARCH
        </button>
        <button type="button" class="btn btn-warning float-left btn-sm mr-3 reset-btn">
            <i class="fa fa-eraser"></i> @ManagerResource.BT_CLEAR
        </button>
    </div>
</div>