@using Manager.WebApp.Resources
@model Manager.WebApp.Models.PropertyCategoryEditModel

<div class="m-section__content">
    <!--begin::Preview-->
    <div class="m-demo">
        <div class="m-demo__preview">
            <div class="m-list-timeline">
                <div class="m-list-timeline__items">
                    @if (Model != null && Model.Properties != null && Model.Properties.Count > 0)
                    {
                        @RenderList()
                    }
                    else {
                        <p>@ManagerResource.LB_HAS_NO_DATA</p>
                    }

                </div>

            </div>
        </div>
    </div>
    <!--end::Preview-->
</div>

@helper RenderList()
{
    foreach (var item in Model.Properties)
    {
        <div class="m-list-timeline__item">
            <span class="m-list-timeline__badge m-list-timeline__badge--success"></span>
            <span class="m-list-timeline__text">
                @*@if (string.IsNullOrEmpty(item.Code))
                {
                    @item.Name
                }
                else
                {
                    @(string.Format("{0} ({1})", item.Name, item.Code))
                }*@
                @item.Name
            </span>
            <span class="m-list-timeline__time">
                <a class="m-portlet__nav-link btn m-btn m-btn--hover-info m-btn--icon m-btn--icon-only m-btn--pill" data-modal="" href="/PropertyCategory/UpdateProperty?id=@item.Id&PropertyCategoryId=@item.PropertyCategoryId" title="@ManagerResource.LB_EDIT">
                    <i class="la la-pencil"></i>
                </a>
                <a class="m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill" href="@Url.Action("DeleteProperty", "PropertyCategory", new { id = item.Id })" data-modal="" title="@ManagerResource.LB_DELETE">
                    <i class="la la-trash"></i>
                </a>
            </span>
        </div>
    }
}