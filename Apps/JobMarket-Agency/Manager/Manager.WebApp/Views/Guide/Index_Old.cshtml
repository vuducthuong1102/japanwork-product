                        element: document.querySelector('#m_support_pop'),
                        intro: '<div class="intro-desc">ユーザサポートチャットアイコン</div>',
                        position: 'top'
                    }                    
                ]
            });

            intro.onbeforechange(function (target) {                
                $(".ab-item").removeClass("ab-item");               
                switch (this._currentStep) {
                    case 0:
                        $("#m_header").toggleClass("ab-item");
                        break;
                    case 1:
                        $("#m_header").toggleClass("ab-item");
                        break;
                    case 2:
