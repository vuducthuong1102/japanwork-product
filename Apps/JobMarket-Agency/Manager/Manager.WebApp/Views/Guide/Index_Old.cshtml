                        break;
                    case 3:                        
                       
                        break;
                    case 4:        
                        $(".ab-item").removeClass("ab-item");
                        //$("#m_support_pop").toggleClass("ab-item");
                        break;
                    default:
                    // code block
                }               
            });
           
            //intro.setOption('tooltipPosition', 'auto');
            //intro.setOption('positionPrecedence', ['right', 'bottom', 'top', 'left']);
            //intro.setOption('showBullets', false);
            intro.setOption('nextLabel', '次 &rarr;');
            intro.setOption('prevLabel', '&larr; 前');
            intro.setOption('skipLabel', 'スキップ');
            intro.setOption('doneLabel', '終わった');
            intro.start();
            intro.onexit(function (target) {
                $(".ab-item").removeClass("ab-item");
            });
        }

    </script>
