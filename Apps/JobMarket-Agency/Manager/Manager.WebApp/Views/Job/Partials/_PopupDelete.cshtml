@using Manager.WebApp.Resources
@model Manager.WebApp.Models.JobClearDataModel

<div class="modal-header">
    <h5 class="modal-title" id="">
        @ManagerResource.CONFIRM_DELETE_JOB
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">
            &times;
        </span>
    </button>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.id)
    @Html.HiddenFor(m => m.tk)
    <div class="modal-body">
        <div class="mt10">
            <h5 class="text-danger">@string.Format(ManagerResource.JOB_DELETE_MATCHING, Model.Counter.GetTotal())</h5>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-info">
            <i class="fa fa-trash"></i> @ManagerResource.LB_YES
        </button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
            <i class="fa fa-remove"></i> @ManagerResource.LB_CANCEL
        </button>
    </div>
}