@using Manager.WebApp.Resources

@model Manager.WebApp.Models.ApplicationIgnoreModel

<div class="modal-header">
    <h5 class="modal-title text-danger" id="">
       <i class="fa fa-hand-stop-o"></i> @ManagerResource.LB_APPLICATION_CONFIRM_IGNORE
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">
            &times;
        </span>
    </button>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.id)
    @Html.HiddenFor(m => m.cv_id)

    <div class="modal-footer">
        <button type="submit" class="btn btn-danger">
            <i class="fa fa-hand-stop-o"></i> @ManagerResource.LB_YES
        </button>
        <button type="button" class="btn btn-outline-info" data-dismiss="modal">
            <i class="fa fa-remove"></i> @ManagerResource.LB_NO
        </button>
    </div>
}