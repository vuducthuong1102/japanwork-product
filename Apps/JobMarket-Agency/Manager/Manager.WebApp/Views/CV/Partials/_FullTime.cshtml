@using Manager.SharedLibs

@model Manager.WebApp.Models.ManageCvPreviewModel
<style>
    table.table{
      font-family:  'Roboto',sans-serif !important;
    }
    table {
        margin: auto;
        border-spacing: 0;
        /*border-bottom: 1px solid #000;
        border-left: 1px solid #000;*/
        font-family: msmincho;
        font-size: 10px;
    }

    td {
        padding: 3px 5px;
        height: 30px;
        border: 1px #000 solid;
    }

    .td123 {
        border-right: none;
        border-top: none;
        border-left: 0;
        padding-left: 15px;
    }

    /*body {
        padding-top: 10px;
        padding-left: 30px;
        padding-right: 30px;
        padding-bottom: 30px;
        word-break: break-all;
        word-wrap: break-word;
        line-height: 20px;
    }*/

    .circle {
        border-radius: 50%;
        border: 1px solid #000;
        padding: 2px 3px;
    }

    .table123 {
        border-right: 1px #000 solid;
        border-top: 1px #000 solid;
    }
</style>
@if (Model != null && Model.CvInfo != null)
{
    <div>
        @Html.Partial("~/Views/CV/Partials/_InfoCv.cshtml", Model)
        <p style="page-break-before: always">
            <div style="height: 5px; width:100%">
            </div>
            <table width="100%" border="1" style="margin-bottom:25px;margin-top:20px;">
                <tbody>
                    <tr style="text-align: center;">
                        <td style="border-right: 1px dashed #000;width:15%">西暦</td>
                        <td style="border-left: 0;width:8%;border-right:0;"> 月</td>
                        <td colspan="2" style="border-right:0;">免許・資格</td>
                    </tr>
                    @{
                        var listCertificate = Model.CvInfo.certification;
                    }
                    @if (listCertificate != null && listCertificate.Count > 0)
                    {
                        foreach (var item in listCertificate)
                        {
                            <tr>
                                <td style="border-right:1px dashed #000;border-top:0;text-align: center;width:15%;">@item.start_date.DateTimeQuestToString("yyyy")</td>
                                <td style="border-top:0; width: 7%; border-right:0;border-left:0;text-align: center;width:8%;">@item.start_date.DateTimeQuestToString("yyyy")</td>
                                <td style="border-right:0;border-top:0">
                                    <div style="overflow:hidden;line-height:20px;height:20px">
                                        @item.name
                                    </div>
                                </td>
                                <td style="width:20%;border-left:0;border-right:0;border-top:0">
                                    <div style="overflow:hidden;line-height:20px;height:20px">
                                        習得
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    <tr>
                        <td style="width:12%;border-top:0;border-right:1px dashed #000;width:15%"> </td>
                        <td style="border-top:0;border-right:0;border-left:0;width:8%"> </td>
                        <td colspan="2" style="border-top:0;border-right:0"> </td>
                    </tr>

                    <tr>
                        <td style="width:12%;border-top:0;border-right:1px dashed #000;width:15%"> </td>
                        <td style="border-top:0;border-right:0;border-left:0;width:8%"> </td>
                        <td colspan="2" style="border-top:0;border-right:0"> </td>
                    </tr>

                    <tr>
                        <td style="width:12%;border-top:0;border-right:1px dashed #000;width:15%"> </td>
                        <td style="border-top:0;border-right:0;border-left:0;width:8%"> </td>
                        <td colspan="2" style="border-top:0;border-right:0"> </td>
                    </tr>

                    <tr>
                        <td style="width:12%;border-top:0;border-right:1px dashed #000;width:15%"> </td>
                        <td style="border-top:0;border-right:0;border-left:0;width:8%"> </td>
                        <td colspan="2" style="border-top:0;border-right:0"> </td>
                    </tr>

                    <tr>
                        <td style="width:12%;border-top:0;border-right:1px dashed #000;width:15%"> </td>
                        <td style="border-top:0;border-right:0;border-left:0;width:8%"> </td>
                        <td colspan="2" style="border-top:0;border-right:0"> </td>
                    </tr>

                </tbody>
            </table>

            <table width="100%" style="margin-bottom:25px;">
                <tbody>
                    <tr>
                        <td style="width:35% ;word-break: break-all; overflow: hidden;border-bottom:1px dashed #000;border-right:1px">最寄り駅</td>
                        <td style="width:28% ;border-bottom: 0px solid #000;border-right:0">扶養家族数</td>
                        <td style="width:16% ;border-bottom: 0px solid #000;border-right:0">配偶者</td>
                        <td style="width:21% ;border-bottom: 0">配偶者の扶養義務</td>
                    </tr>
                    <tr>
                        <td style="border-top: 0; border-right:0px"> - </td>
                        <td style="border-top: 0; border-right:0px">（配偶者を除く）@(Model.CvInfo.dependent_num + "人")</td>
                        <td style="border-top: 0; border-right:0px">
                            <span style="text-align: center;"><span class="@(Model.CvInfo.marriage ? "circle" : "")">有</span> ・ <span class="@(!Model.CvInfo.marriage ? "circle" : "")"> 無</span></span>
                        </td>
                        <td style="border-top: 0">
                            <span style="text-align: center;">有 ・ <span class="circle"> 無</span></span>
                        </td>
                    </tr>

                </tbody>
            </table>

            <table width="100%" border="1" style="margin-bottom:25px;">
                <tbody>
                    <tr>
                        <td>
                            <div style="height: 120px; overflow:hidden;line-height: 20px;white-space: normal;">
                                得意な分野・特技・趣味<br>
                                @Model.CvInfo.hobby_skills
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>

            <table width="100%" border="1" style="margin-bottom:25px;">
                <tbody>
                    <tr>
                        <td>
                            <div style="height: 200px; overflow:hidden;line-height: 20px;white-space: normal;">
                                自己ＰＲ<br>
                                @Model.CvInfo.pr
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>

            <table width="100%" border="1" style="margin-bottom:5px;">
                <tbody>
                    <tr>
                        <td>
                            <div style="height: 200px; overflow:hidden;line-height: 20px;white-space: normal;">
                                志望動機<br>
                                @Model.CvInfo.reason
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
    </div>
}