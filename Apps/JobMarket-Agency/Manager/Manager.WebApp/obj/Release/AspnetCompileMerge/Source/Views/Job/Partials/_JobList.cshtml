@using System.Globalization
@using Manager.WebApp.Resources
@using Manager.SharedLibs
@model Manager.WebApp.Models.ManageJobModel

@{
    var currentLang = CultureInfo.CurrentCulture.ToString();
    var hasCompanies = Model.Companies.HasData();
    var hasSubFields = Model.SubFields.HasData();
    var canEdit = PermissionHelper.CheckPermission("Edit", "Job");
    var canDelete = PermissionHelper.CheckPermission("Delete", "Job");
    var canClose = PermissionHelper.CheckPermission("Close", "Job");
    var canIntroduction = PermissionHelper.CheckPermission("JobChoosenJobSeeker", "Job");
}


<div class="m-portlet">
    <div class="col-lg-12">
        <div class="clearfix d-flex operation">
            @if (PermissionHelper.CheckPermission("Create", "Job"))
            {
                <a class="btn btn-white btn-sm btn-info" href="/Job/Create" title="@ManagerResource.LB_ADD_JOB"><i class="fa fa-plus"></i> @ManagerResource.LB_ADD_JOB</a>
                @*<a class="btn btn-white btn-secondary" data-href="@Url.Action("Delete", "Job", new { ids = "0" })" data-size="default" href="javascript:;" data-link="@Url.Action("Delete", "Job")" data-modal="" title="@ManagerResource.LB_DELETE">
                        <i class="fa fa-trash"></i> @ManagerResource.LB_DELETE
                    </a>*@
            }
        </div>
    </div>
    <div class="m-portlet__body">
        <!--end::Section-->
        <!--begin::Section-->
        <div class="m-section">
            <div class="m-section__content table-responsive">
                <table id="sample-table-1" class="tbl-row-hover table m-table m-table--head-bg-brand table-bordered custom-border custom-checkbox custom-label">
                    <thead>
                        <tr>
                            <th class="text-center align-middle text-info" colspan="4">@ManagerResource.LB_INFORMATION_JOB</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.SearchResults != null && Model.SearchResults.Count > 0)
                        {
                            var stt = 0;
                            foreach (var record in Model.SearchResults)
                            {
                                stt++;
                                var jobName = string.Empty;
                                if (record.Job_translations.HasData())
                                {
                                    jobName = record.Job_translations.Where(x => x.language_code == currentLang).Select(x => x.title).FirstOrDefault();
                                    if (string.IsNullOrEmpty(jobName))
                                    {
                                        jobName = record.Job_translations.Where(x => x.language_code != currentLang).Select(x => x.title).FirstOrDefault();
                                    }
                                }
                                var detailLink = SecurityHelper.GenerateSecureLink("Job", "Detail", new { id = record.id, company_id = record.company_id, SearchExec = 'Y', Page = Model.CurrentPage, Keyword = Model.Keyword, Status = Model.Status });

                                var isExpired = true;
                                if (record.closed_time != null && record.closed_time.Value > DateTime.Now)
                                {
                                    isExpired = false;
                                }
                                if (isExpired)
                                {
                                    record.status = 4;
                                }
                                <tr data-id="@record.id">
                                    <td rowspan="3" class="width-3">
                                        <div class="display-flex">
                                            @if (record.company_info != null)
                                            {
                                                <div class="float-left" title="@record.company_info.company_name">
                                                    <a href="@detailLink" class="logo-sm ml10 p-0" style="width:90px;height:60px;display:flex">
                                                        <img src="@record.company_info.logo_full_path" />
                                                    </a>
                                                </div>
                                            }
                                            <a class="float-left ml10" href="@detailLink">
                                                <div class="job--name" title="@ManagerResource.LB_CLICK_VIEW_DETAIL">
                                                    @jobName
                                                </div>
                                            </a>
                                        </div>
                                    </td>
                                    <td class="width-1-5">
                                        <label>@ManagerResource.LB_CODE</label>
                                        <span class="job--code" title="@ManagerResource.LB_JOB_CODE">@record.job_code</span>
                                    </td>
                                    <td class="width-1-5">
                                        <label>@ManagerResource.LB_APPLICATION_COUNT</label>
                                        <span class="number-css">
                                            @if (record.Extensions.application_count > 0)
                                            {
                                                var currentApplication = (int)record.Extensions.application_count;
                                                var detailActiveAppication = SecurityHelper.GenerateSecureLink("Job", "Detail", new { id = record.id, company_id = record.company_id, SearchExec = 'Y', Page = Model.CurrentPage, Keyword = Model.Keyword, Status = Model.Status, tab = "application" });
                                                <a href="@detailActiveAppication">@currentApplication.FormatWithComma()</a>
                                            }
                                            else
                                            {
                                                <span>0</span>
                                            }
                                        </span>
                                    </td>
                                    <td>
                                        <label>@ManagerResource.LB_COMPANY</label>
                                        @{
                                            var detailCompany = SecurityHelper.GenerateSecureLink("Company", "Detail", new { id = record.company_id });
                                        }
                                        <a href="@detailCompany">
                                            @if (hasCompanies)
                                            {
                                                var companyName = string.Empty;
                                                var companyInfo = Model.Companies.Where(x => x.id == record.company_id).FirstOrDefault();
                                                if (companyInfo != null)
                                                {
                                                    companyName = companyInfo.company_name;
                                                    if (companyInfo.LangList.HasData())
                                                    {
                                                        var companyLang = companyInfo.LangList.Where(x => x.language_code == currentLang).FirstOrDefault();
                                                        if (companyLang == null)
                                                        {
                                                            companyLang = companyInfo.LangList[0];
                                                        }

                                                        if (companyLang != null)
                                                        {
                                                            companyName = companyLang.company_name;
                                                        }
                                                    }
                                                    @companyName
                                                    if (companyInfo.status == 9)
                                                    {
                                                        <span class="text-danger">(@ManagerResource.LB_DELETED)</span>
                                                    }
                                                }
                                            }
                                            else
                                            {
                                                @Model.company_name
                                            }
                                        </a>
                                    </td>
                                </tr>
                                <tr data-id="@record.id">
                                    <td>
                                        <label>@ManagerResource.LB_PERSON_CHARGE</label>
                                        @if (Model.Staffs.HasData())
                                        {
                                            var picInfo = Model.Staffs.FirstOrDefault(s => s.StaffId == record.pic_id);
                                            if (picInfo != null)
                                            {
                                                @picInfo.FullName
                                            }
                                        }
                                    </td>
                                    <td>
                                        <label>@ManagerResource.LB_INVITED_COUNT</label>
                                        <span class="number-css">
                                            @if (record.Extensions.invited_count > 0)
                                            {
                                                var currentInvited = (int)record.Extensions.invited_count;
                                                var detailActiveInvited = SecurityHelper.GenerateSecureLink("Job", "Detail", new { id = record.id, company_id = record.company_id, SearchExec = 'Y', Page = Model.CurrentPage, Keyword = Model.Keyword, Status = Model.Status, tab = "invited" });
                                                <a href="@detailActiveInvited">@currentInvited.FormatWithComma()</a>
                                            }
                                            else
                                            {
                                                <span>0</span>
                                            }
                                        </span>
                                    </td>
                                    <td>
                                        <label>@ManagerResource.LB_JOB_FIELD</label>
                                        @if (hasSubFields)
                                        {
                                            var subFieldName = string.Empty;
                                            var sub = Model.SubFields.Where(x => x.id == record.sub_field_id).FirstOrDefault();
                                            if (sub != null)
                                            {
                                                if (sub.LangList.HasData())
                                                {
                                                    subFieldName = sub.LangList.Where(x => x.language_code == currentLang).Select(x => x.sub_field).FirstOrDefault();

                                                }
                                                if (string.IsNullOrEmpty(subFieldName))
                                                {
                                                    subFieldName = sub.sub_field;
                                                }
                                            }
                                            @subFieldName
                                        }
                                    </td>
                                </tr>
                                <tr data-id="@record.id">
                                    <td>
                                        <label>@ManagerResource.LB_EXPIRATION_DATE</label>
                                        @if (record.closed_time.Value < DateTime.Now)
                                        {
                                            <span class="job--expired">
                                                @record.closed_time.DateTimeQuestToLocaleString(currentLang)
                                            </span>
                                        }
                                        else
                                        {
                                            @record.closed_time.DateTimeQuestToLocaleString(currentLang)
                                        }
                                    </td>
                                    <td>
                                        <label>@ManagerResource.LB_INTRODUCE_COUNT</label>
                                        <span class="number-css">
                                            @if (record.Extensions.introduce_count > 0)
                                            {
                                                var currentIntroduce = (int)record.Extensions.introduce_count;
                                                var detailActiveIntroduce = SecurityHelper.GenerateSecureLink("Job", "Detail", new { id = record.id, company_id = record.company_id, SearchExec = 'Y', Page = Model.CurrentPage, Keyword = Model.Keyword, Status = Model.Status, tab = "introduce" });
                                                <a href="@detailActiveIntroduce">@currentIntroduce.FormatWithComma()</a>
                                            }
                                            else
                                            {
                                                <span>0</span>
                                            }
                                        </span>
                                    </td>
                                    <td>
                                        <label>@ManagerResource.LB_STATUS</label>
                                        @Html.Partial("Partials/_Status", record.status)
                                    </td>
                                </tr>
                                <tr data-id="@record.id">
                                    <td colspan="4" class="custom-td row-control row-control-@record.id" style="opacity:0;">
                                        @{
                                            var editLink = SecurityHelper.GenerateSecureLink("Job", "Edit", new { id = record.id, language_code = record.language_code, SearchExec = 'Y', Page = Model.CurrentPage, Keyword = Model.Keyword, Status = Model.Status });
                                            var inviteLink = SecurityHelper.GenerateSecureLink("Job", "CvInvite", new { job_id = record.id });
                                            var hasPic = PermissionHelper.CheckIsPic(record.pic_id);
                                            var hasCompanyPic = PermissionHelper.CheckIsPic(record.company_pic_id);

                                        }

                                        @if (!isExpired)
                                        {
                                            if (canIntroduction)
                                            {
                                                if (record.status == (int)EnumJobStatus.Published)
                                                {
                                                    if (hasPic)
                                                    {
                                                        var choosenJobSeekerLink = SecurityHelper.GenerateSecureLink("Job", "JobChoosenJobSeeker", new { job_id = record.id, status = record.status, type_job_seeker = 0 });
                                                        <a class="m-portlet__nav-link btn btn-warning btn-sm m-btn m-btn m-btn--icon" data-modal-direct="" data-size="" data-href="@choosenJobSeekerLink" title="@ManagerResource.LB_INVITATION_TO_APPLY">
                                                            <i class="fa fa-send-o"></i> @ManagerResource.LB_INVITATION_TO_APPLY
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a class="m-portlet__nav-link btn btn-warning btn-sm m-btn m-btn m-btn--icon btn-error-incorrect-user" href="javascript:;" title="@ManagerResource.LB_INVITATION_TO_APPLY">
                                                            <i class="fa fa-send-o"></i> @ManagerResource.LB_INVITATION_TO_APPLY
                                                        </a>
                                                    }

                                                }

                                                if (record.status == (int)EnumJobStatus.Draft || record.status == (int)EnumJobStatus.Published
                                                    || record.status == (int)EnumJobStatus.Saved || record.status == (int)EnumJobStatus.Canceled)
                                                {
                                                    if (hasPic)
                                                    {
                                                        var choosenJobSeekerLink = SecurityHelper.GenerateSecureLink("Job", "JobChoosenJobSeeker", new { job_id = record.id, status = record.status, type_job_seeker = 1 });
                                                        <a class="m-portlet__nav-link btn btn-warning btn-sm m-btn m-btn m-btn--icon" data-modal-direct="" data-size="" data-href="@choosenJobSeekerLink" title="@ManagerResource.LB_JOB_INTRODUCTION">
                                                            <i class="la la-user-plus"></i> @ManagerResource.LB_JOB_INTRODUCTION
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a class="m-portlet__nav-link btn btn-warning btn-sm m-btn m-btn m-btn--icon btn-error-incorrect-user" href="javascript:;" title="@ManagerResource.LB_JOB_INTRODUCTION">
                                                            <i class="la la-user-plus"></i> @ManagerResource.LB_JOB_INTRODUCTION
                                                        </a>
                                                    }
                                                }
                                            }
                                        }
                                        @if ((record.status == (int)EnumJobStatus.Saved) && canEdit)
                                        {
                                            if (hasPic)
                                            {
                                                <a class="m-portlet__nav-link btn btn-warning btn-sm m-btn m-btn m-btn--icon" href="@editLink" title="@ManagerResource.LB_EDIT">
                                                    <i class="la la-pencil"></i>&nbsp;@ManagerResource.LB_EDIT
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="m-portlet__nav-link btn btn-warning btn-sm m-btn m-btn m-btn--icon btn-error-incorrect-user" title="@ManagerResource.LB_EDIT">
                                                    <i class="la la-pencil"></i>&nbsp;@ManagerResource.LB_EDIT
                                                </a>
                                            }
                                        }
                                        @if (record.status == (int)EnumJobStatus.Saved)
                                        {
                                            <a class="m-portlet__nav-link btn @(record.translate_status == (int)EnumTranslateStatus.NotTranslatedYet ? "btn-danger" : "btn-success")  btn-sm m-btn m-btn m-btn--icon" href="@Url.Action("Language", "Job", new { id = record.id, company_id = record.company_id, translate_status = record.translate_status })" title="@ManagerResource.LB_TRANSLATE_JOB">
                                                <i class="la la-language )"></i> @ManagerResource.LB_TRANSLATE_JOB
                                            </a>
                                        }
                                        @if (canDelete && (record.status == (int)EnumJobStatus.Saved || record.status == (int)EnumJobStatus.Draft || record.status == (int)EnumJobStatus.Canceled || isExpired))
                                        {
                                            if (hasPic || hasCompanyPic)
                                            {
                                                var tk = SecurityHelper.GenerateUrlToken("Job", "Delete", new { id = record.id });
                                                <a class="btn btn-white btn-danger m-portlet__nav-link btn-sm m-btn m-btn m-btn--icon" data-href="@Url.Action("Delete", "Job", new { id = record.id, tk = tk })" data-size="default" href="javascript:;" data-link="@Url.Action("Delete", "Job")" data-modal="" title="@ManagerResource.LB_DELETE">
                                                    <i class="fa fa-trash"></i> @ManagerResource.LB_DELETE
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-white btn-danger m-portlet__nav-link btn-sm m-btn m-btn m-btn--icon btn-error-incorrect-user" href="javascript:;" title="@ManagerResource.LB_DELETE">
                                                    <i class="fa fa-trash"></i> @ManagerResource.LB_DELETE
                                                </a>
                                            }
                                        }
                                        @if (canClose && (record.status == (int)EnumJobStatus.Published) && !isExpired)
                                        {
                                            if (hasPic || hasCompanyPic)
                                            {
                                                <a class="btn btn-white btn-warning m-portlet__nav-link btn-sm m-btn m-btn m-btn--icon" data-href="@Url.Action("Close", "Job", new { id = record.id })" data-size="default" href="javascript:;" data-link="@Url.Action("Close", "Job")" data-modal="" title="@ManagerResource.BT_JOB_CLOSE">
                                                    <i class="fa fa-close"></i> @ManagerResource.BT_JOB_CLOSE
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-white btn-warning m-portlet__nav-link btn-sm m-btn m-btn m-btn--icon btn-error-incorrect-user" href="javascrip:;" title="@ManagerResource.BT_JOB_CLOSE">
                                                    <i class="fa fa-close"></i> @ManagerResource.BT_JOB_CLOSE
                                                </a>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="11">
                                    @ManagerResource.LB_HAS_NO_JOB
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @RenderPaging()
        </div>
        <div class="col-md-12">
            <div class="separator">ボタンの説明</div>
            <div class="mb-1 pt-3">
                ※<a class="btn btn-white btn-sm btn-info" href="javascript:;" title="追加"><i class="fa fa-plus"></i> 追加</a>：求人を追加します。
            </div>
            <div class="mb-1">
                ※<a class="m-portlet__nav-link btn btn-warning btn-sm m-btn m-btn m-btn--icon" href="javascript:;" title="この求人に合うJapan Workに登録した求職者をスカウトします">
                    <i class="fa fa-send-o"></i>&nbsp;マッチング(JW)
                </a>：この求人にマッチしたJapan Workに登録した求職者情報がポップアップで表示されます。任意の求人情報のチェックボックスをクリックし、送信ボタンを押すと当該求職者にスカウトが通知されます。
            </div>
            <div class="mb-1">
                ※<a class="m-portlet__nav-link btn btn-warning btn-sm m-btn m-btn m-btn--icon" href="javascript:;" title="この求人に合う自社登録した求職者に紹介します">
                    <i class="la la-user-plus"></i>&nbsp;マッチング(自社)
                </a>：登録されている全求職者情報がポップアップで表示されます、任意の求職者情報のチェックボックスをクリックし、保存ボタンを押すと当該求職者情報が進捗状況に表示されます。
            </div>
            <div class="mb-1">
                ※<a class="m-portlet__nav-link btn btn-warning btn-sm m-btn m-btn m-btn--icon" href="javascript:;" title="編集">
                    <i class="la la-pencil"></i>&nbsp;編集
                </a> : 登録した求人の情報を編集/更新します。なお、公開申請した求人を編集することができません。
            </div>
            <div class="mb-1">
                ※<a class="m-portlet__nav-link btn btn-danger  btn-sm m-btn m-btn m-btn--icon" href="javascript:;" title="言語翻訳">
                    <i class="la la-language"></i> 言語翻訳
                </a>：求人情報をベトナム語に翻訳します。
            </div>
            <div class="mb-1">
                ※<a class="btn btn-white btn-warning m-portlet__nav-link btn-sm m-btn m-btn m-btn--icon" href="javascript:;" title="非公開">
                    <i class="fa fa-close"></i> 非公開
                </a>：公開中の求人情報を非公開にします。
            </div>
            <div class="mb-1">
                ※<a class="btn btn-white btn-danger m-portlet__nav-link btn-sm m-btn m-btn m-btn--icon" href="javascript:;" title="削除">
                    <i class="fa fa-trash"></i> 削除
                </a>：求人を削除します。なお、未公開の求人情報しか削除することができません。
            </div>
        </div>
    </div>
    <!--end::Form-->
</div>


@helper RenderPaging()
{
    <div class="m_datatable m-datatable m-datatable--default m-datatable--brand m-datatable--loaded">
        <div class="m-datatable__pager m-datatable--paging-loaded clearfix">
            @if (Model.WasOverRecordsInPage())
            {

                @Html.BootstrapPager(Model.CurrentPage, index => Url.Action("Index", "Job",
                     new
                     {
                         Page = index,
                         SearchExec = "Y",
                         Keyword = Model.Keyword,
                         Status = Model.Status,
                         translate_status = Model.translate_status,
                         japanese_level_number = Model.japanese_level_number,
                         salary_min = Model.salary_min,
                         salary_max = Model.salary_max,
                         employment_type_id = Model.employment_type_id,
                         staff_id = Model.staff_id,
                         prefecture_id = Model.prefecture_id,
                         sub_id = Model.sub_id,

                     }),
                     Model.TotalCount, pageSize: Model.PageSize, numberOfLinks: 10)
            }

            @if (Model.TotalCount > 0)
            {
                <div class="m-datatable__pager-info">
                    <span class="m-datatable__pager-detail">
                        @ManagerResource.LB_RECORDS_ALL @Model.TotalCount @ManagerResource.LB_RECORDS @Model.StartCount() 〜 @Model.EndCount(Model.SearchResults.Count()) @ManagerResource.LB_RECORDS_DISPLAY
                    </span>
                </div>
            }
        </div>

    </div>
}