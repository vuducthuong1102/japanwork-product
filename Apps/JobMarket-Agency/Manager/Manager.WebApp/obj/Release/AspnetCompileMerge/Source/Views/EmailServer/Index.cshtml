                                    <th class="text-center">@ManagerResource.LB_INFORMATION</th>
                                    <th class="text-center">@ManagerResource.LB_STATUS</th>
                                    <th class="text-center action-3">@ManagerResource.LB_ACTION</th>
                                </tr>
                            </thead>

                            <tbody>
