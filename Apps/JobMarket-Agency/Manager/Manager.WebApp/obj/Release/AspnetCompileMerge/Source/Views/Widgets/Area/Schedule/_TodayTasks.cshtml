@model List<ScheduleWidgetModel>

    <div class="m-widget2">
        @if (Model.HasData())
        {
            foreach (var item in Model)
            {
                var clsStr = "brand";
                if (item.data.schedule_cat == (int)EnumScheduleCategory.Meeting)
                {
                    clsStr = "danger";
                }
                else if (item.data.schedule_cat == (int)EnumScheduleCategory.Guest)
                {
                    clsStr = "primary";
                }
                else if (item.data.schedule_cat == (int)EnumScheduleCategory.Sales)
                {
                    clsStr = "warning";
                }
                <div class="m-widget2__item m-widget2__item--@clsStr">
                    <div class="m-widget2__checkbox">
