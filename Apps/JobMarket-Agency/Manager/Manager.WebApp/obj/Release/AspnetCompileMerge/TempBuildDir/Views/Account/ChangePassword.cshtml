@using Manager.WebApp.Resources
@model Manager.WebApp.Models.AccountChangePasswordViewModel

@{
    ViewBag.Title = "Change password";
}

@Html.Partial("_Notifications")

<div class="row">
    <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="m-portlet">
            
            <!--begin::Form-->
            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Partial("_ValidationSummary", ViewData.ModelState)
            <div class="m-portlet__body">
                <div class="form-group m-form__group row">
                    <div class="col-lg-6">
                        @Html.LabelFor(m => m.OldPassword, new { @class = "form-control-label" })
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control form-control-warning m-input" })
                        @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="col-lg-6">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "form-control-label" })
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-warning m-input" })
                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="col-lg-6">
                        @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "form-control-label" })
                        @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control form-control-warning m-input" })
                        @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
                <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                    <div class="m-form__actions m-form__actions--solid">
                        <div class="row">
                            <div class="col-lg-6">
                                <a class="btn btn-danger" href="@Url.Action("Profile", "Account")"><i class="la la-backward"></i> @ManagerResource.LB_GOBACK</a>
                                <button type="submit" class="btn btn-info">
                                    @ManagerResource.LB_SAVE
                                </button>
                            </div>
                            <div class="col-lg-6 m--align-right">
                                <button type="reset" class="btn btn-danger">
                                    @ManagerResource.BT_RESET
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--end::Form-->
        </div>
        <!--end::Portlet-->
    </div>
</div>

@section PagePluginStyles
{

}

@section PagePluginScripts
 {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}