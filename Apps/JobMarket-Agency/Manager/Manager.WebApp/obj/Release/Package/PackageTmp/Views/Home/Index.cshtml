    <link href="~/Scripts/Plugins/Chart/Chart.min.css" rel="stylesheet" />
    <style>
        canvas {
            -moz-user-select: none;
            -webkit-user-select: none;
            -ms-user-select: none;
        }

        .m-portlet__head-text{
            color: #36a3ca !important;
        }

        .m-portlet__head-text i:before{
            font-weight:bold;
        }
        .m-body .m-content{
            padding: 15px 15px;
            height:auto;
        }
    </style>
}

