                </div>
                <div class="m-portlet__foot m-portlet__foot--fit row">
                    <div class="m-form__actions m-form__actions text-center" style="width:100%">
                        <button type="submit" class="btn btn-info" style="width:50%;height:60px;">
                            <i class="la la-floppy-o"></i> @ManagerResource.BT_REGISTER
                        </button>
                    </div>
                </div>
            </form>
            <!--end::Form-->
        </div>
    </div>
</div>

