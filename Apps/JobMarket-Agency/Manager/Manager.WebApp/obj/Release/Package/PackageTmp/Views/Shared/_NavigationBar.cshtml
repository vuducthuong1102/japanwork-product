@{
    int searchStatus = 0;
    var Controller = string.Empty;
    var Action = string.Empty;
    var searchExec = string.Empty;
    if (Model != null)
    {
        foreach (PropertyInfo prop in Model.GetType().GetProperties())
        {
            if (prop.Name == "SearchStatus")
            {
                searchStatus = Utils.ConvertToInt32(prop.GetValue(Model));
            }
            if (prop.Name == "Controller")
            {
                Controller = prop.GetValue(Model);
            }
            if (prop.Name == "Action")
            {
                Action = prop.GetValue(Model);
            }
            if (prop.Name == "SearchExec")
            {
                searchExec = prop.GetValue(Model);
            }
        }
    }
}
