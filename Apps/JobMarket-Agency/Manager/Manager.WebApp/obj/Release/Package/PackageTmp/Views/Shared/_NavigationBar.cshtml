@helper RenderTopMenuItem(IdentityMenu mi, string cssOpen, string cssActive)
{
    var cssParent = mi.HasVisbleChildren ? "m-menu__item--submenu" : "";
    var cssLink = mi.HasVisbleChildren ? "m-menu__toggle" : "";

    var itemUrl = !string.IsNullOrEmpty(mi.Action) && !string.IsNullOrEmpty(mi.Controller) ?
                        Url.Action(mi.Action, mi.Controller) : "javascript:;";

    <li class="m-menu__item  @cssParent @cssOpen @cssActive m-menu__item--rel" m-menu-submenu-toggle="click" m-menu-link-redirect="1" aria-haspopup="true">
        <a href="@itemUrl" class="m-menu__link @cssLink">
            <i class="m-menu__link-icon @mi.IconCss"></i>
            <span class="m-menu__link-title">
                <span class="m-menu__link-wrap">
                    <span class="m-menu__link-text">
                        @mi.CurrentTitleLang
                    </span>
                    @*<span class="m-menu__link-badge">
                            <span class="m-badge m-badge--brand m-badge--wide">
                                new
                            </span>
                        </span>*@
                </span>
            </span>
            @if (mi.HasVisbleChildren)
            {
                <i class="m-menu__hor-arrow la la-angle-down"></i>
            }
            @*<i class="m-menu__ver-arrow la la-angle-right"></i>*@
        </a>
        @if (mi.HasVisbleChildren)
        {
            <div class="m-menu__submenu m-menu__submenu--classic m-menu__submenu--left">
                <span class="m-menu__arrow m-menu__arrow--adjust"></span>
                <ul class="m-menu__subnav">
                    @foreach (var smi in mi.SubMenu)
                    {
                        if (smi.Visible)
                        {
                            @RenderSubMenuItem(smi);
                        }
                    }
                </ul>
            </div>
        }
    </li>
}

@helper RenderSubMenuItem(IdentityMenu mi)
{
    var cssParent = MenuHelper.CheckCurrentActionCustom(mi) ? "m-menu__item--active" : "";

    var cssLink = mi.HasVisbleChildren ? "m-menu__toggle" : "";

    var itemUrl = !string.IsNullOrEmpty(mi.Action) && !string.IsNullOrEmpty(mi.Controller) ? Url.Action(mi.Action, mi.Controller) : "javascript:;";
    if (PermissionHelper.CheckPermission(mi.Action, mi.Controller))
    {
        <li class="m-menu__item @cssParent" m-menu-link-redirect="1" aria-haspopup="true">
            <a href="@itemUrl" class="m-menu__link @cssLink" title="@mi.FullDesc">
                @if (!string.IsNullOrEmpty(mi.IconCss))
                {
                    <i class="m-menu__link-icon @mi.IconCss"></i>
                }
                else
                {
                    <i class="m-menu__link-bullet m-menu__link-bullet--dot"><span></span></i>
                }

                <span class="m-menu__link-text">
                    @mi.CurrentTitleLang
                </span>
                @if (mi.HasVisbleChildren)
                {
                    <i class="m-menu__ver-arrow la la-angle-right"></i>
                }
            </a>
            @if (mi.HasVisbleChildren)
            {
                <div class="m-menu__submenu m-menu__submenu--classic m-menu__submenu--left">
                    <span class="m-menu__arrow m-menu__arrow--adjust"></span>
                    <ul class="m-menu__subnav">
                        @foreach (var smi in mi.SubMenu)
                        {
                            if (smi.Visible)
                            {
                                @RenderSubMenuItem(smi);
                            }
                        }
                    </ul>
                </div>
            }
        </li>
    }
}

<script type="text/javascript">
