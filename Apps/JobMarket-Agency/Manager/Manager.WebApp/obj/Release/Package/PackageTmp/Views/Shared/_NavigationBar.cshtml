        params['url'] = '/Master/GetFieldsByEmploymentType';
        params['requestType'] = 'POST';
        params['data'] = {
            employment_type: employment_type,
            form: 1,
        };
        params['showloading'] = false;
        params['dataType'] = "html";

        params['successCallbackFunction'] = function (result) {
            var selectField = $(elem).closest('.search-advance.show').find('.select-field select');            
            selectField.html(result);
            selectField.val(0);
            selectField.selectpicker("refresh");
            var btnDropdown = selectField.next();
            var lengthOption = selectField.find("option").length;
            checkSubList(btnDropdown,lengthOption);
        };
        doAjax(params);
    }
</script>