@using Manager.WebApp.Resources
@model int

@if (Model == (int)(EnumJobStatus.Draft))
{
    <span class="m-badge m-badge--wide m-badge--danger"><i class="fa fa-lock"></i> @ManagerResource.LB_AWAITING_APPROVAL</span>
}
else if (Model == (int)(EnumJobStatus.Closed))
{
    <span class="m-badge m-badge--wide m-badge--warning"><i class="fa fa-close"></i> @ManagerResource.LB_CLOSED</span>
}
else if (Model == (int)(EnumJobStatus.Published))
{
    <span class="m-badge m-badge--wide m-badge--success"><i class="fa fa-check"></i> @ManagerResource.LB_ACTIVE</span>
}