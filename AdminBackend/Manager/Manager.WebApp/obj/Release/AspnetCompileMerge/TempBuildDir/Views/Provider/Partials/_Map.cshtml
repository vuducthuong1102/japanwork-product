@using Manager.WebApp.Settings
@model Manager.WebApp.Models.ProviderEditModel

<div class="row">
    <div class="col-md-12">
        <div class="form-horizontal" style="width: 100%">
            <div class="form-group">               
                <div class="">
                    <label>Địa điểm: </label>
                    <input type="text" class="form-control" id="us3-address" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 hidden">Radius:</label>
                <div class="col-sm-5 hidden">
                    <input type="text" class="form-control" id="us3-radius" />
                </div>
            </div>
            <div id="us3" style="min-width: 550px; height: 400px;"></div>
            <div class="clearfix">&nbsp;</div>
            <div class="m-t-small form-group">
                <div class="">
                    <label>Vĩ độ/Kinh độ: </label>
                    <input type="text" class="" id="Latitude"  value="@((!string.IsNullOrEmpty(Model.Latitude))? Model.Latitude: MapSettings.DefaultLatitude)" readonly="readonly" />
                    /
                    <input type="text" class="" id="Longitude" value="@(!string.IsNullOrEmpty(Model.Longitude)? Model.Longitude: MapSettings.DefaultLongitude)" readonly="readonly" />
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group">
                <div class="">
                    <button type="button" class="btn btn-sm btn-primary" id="btnSaveMap"><i class="ace-icon fa fa-floppy-o bigger-110"></i> Lưu</button>
                </div>
            </div>
        </div>
    </div>
</div>
