                <div class="m-card-user m-card-user--skin-dark">
                    <div class="m-card-user__pic">
                        <img src="@avatarUrl" class="m--img-rounded m--marginless" title="@fullName" alt="@fullName" />
                    </div>
                    <div class="m-card-user__details">
                        @if (user != null)
                        {
                            <span class="m-card-user__name m--font-weight-500 cut-text" title="@user.FullName">
                                @user.FullName
                            </span>
                        }
                        <span class="m-card-user__name m--font-weight-500" style="@((user != null && !string.IsNullOrEmpty(user.FullName)) ? "font-size:15px": string.Empty)">
                            @fullName
