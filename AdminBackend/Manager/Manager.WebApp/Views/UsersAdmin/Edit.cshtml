@using Manager.WebApp.Resources
@using Manager.WebApp.Helpers
@model Manager.WebApp.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

@Html.Partial("_Notifications")

@Html.Partial("../Widgets/Modals/_DefaultModal")

<div class="row">
    <div class="col-lg-12 col-md-12">
        <!--begin::Portlet-->
        <div class="m-portlet">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                            @ManagerResource.LB_INFORMATION
                        </h3>
                    </div>
                </div>
            </div>
            <!--begin::Form-->
            @using (Html.BeginForm("Edit", "UsersAdmin", FormMethod.Post, new { role = "form", @class = "m-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
                <div class="m-portlet__body">
                    <div class="m-form">
                        <div class="form-group m-form__group">
                            @Html.LabelFor(model => model.UserName)
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control m-input" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>  
                        <div class="form-group m-form__group">
                            @Html.LabelFor(model => model.FullName)
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control m-input" })
                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                        </div> 
                        <div class="m-form__group form-group">
                            <label for="">
                               @ManagerResource.LB_ROLES_ASSIGNED:
                            </label>
                            <div class="m-checkbox-inline">
                                @if (Model.RolesList != null && Model.RolesList.Count() > 0)
                                {
                                    var isAdmin = AccountHelper.CurrentUserIsAdmin();
                                    foreach (var item in Model.RolesList)
                                    {
                                        if (item.Value.ToLower() == "admin")
                                        {
                                            <label class="m-checkbox" style="@((!isAdmin)? "color:#ccc" : string.Empty)">
                                                <input type="checkbox" value="@item.Value" name="SelectedRole" checked="@item.Selected" @((!isAdmin)? "disabled" : string.Empty)>
                                                @item.Value
                                                <span></span>
                                            </label>
                                        }
                                        else
                                        {
                                            <label class="m-checkbox">
                                                <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected">
                                                @item.Value
                                                <span></span>
                                            </label>
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="row m-form__group">
                        <div class="col-lg-6">                            
                            <button type="submit" class="btn btn-info">
                                <i class="fa fa-download"></i> @ManagerResource.LB_SAVE
                            </button>                            
                            <a class="btn btn-danger" data-href="@Url.Action("ResetPassword", "UsersAdmin", new { id = Model.Id })" data-modal=""><i class="fa fa-lock"></i> @ManagerResource.LB_RESET_PASSWORD</a>
                            <a class="btn btn-secondary" href="@Url.Action("Index", "UsersAdmin", new { SearchExec = 'Y', Page = Model.Page, Email = Model.SEmail, RoleId = Model.SRoleId, IsLocked = Model.SIsLocked })"><i class="fa fa-remove"></i> @ManagerResource.LB_CANCEL</a>
                        </div>                        
                    </div>
                </div>
            }
            <!--end::Form-->
        </div>
        <!--end::Portlet-->
    </div>

</div>

@section PagePluginStyles
{

}

@section PagePluginScripts
 {

}


