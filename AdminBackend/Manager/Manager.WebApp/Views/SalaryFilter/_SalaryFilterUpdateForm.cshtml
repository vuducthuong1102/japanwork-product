    <div class="form-group m-form__group row">

        <div class="col-lg-3 col-sm-12">
            <select data-placeholder="@ManagerResource.LB_EMPLOYMENT_TYPE" id="ddlEmploymentType" class="form-control selectpicker btn-white" name="@Html.IdFor(m=>m.type)">
                @if (Model.EmploymentTypes.HasData())
                {
                    foreach (var employType in Model.EmploymentTypes)
                    {
                        var currentName = string.Empty;
                        if (employType.LangList.HasData())
                        {
                            currentName = employType.LangList.Where(x => x.language_code == currentLang).Select(x => x.employment_type).FirstOrDefault();
                        }
                        else
                        {
                            currentName = employType.employment_type;
                        }
                        <option value="@employType.id" data-calculate="@employType.calculate_by" data-showtrains="@employType.show_trains" @((Model.type == employType.id) ? "selected" : "")>@currentName</option>
                    }
                }
            </select>
        </div>
        <div class="col-lg-1 col-sm-12">
            <select class="form-control selectpicker btn-white" name="@Html.IdFor(m=>m.key)">
                <option value="min" @((Model.key == "min") ? "selected" : "")>Trên</option>
                <option value="max" @((Model.key == "max") ? "selected" : "")>Dưới</option>
            </select>
        </div>
        <div class="col-lg-1 col-sm-12">
            @Html.TextBoxFor(m => m.number, new { @class = "form-control",@type="number"  })
        </div>
    </div>

<div class="form-group m-form__group row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <a class="btn btn-outline-info btn-back" href="@Url.Action("Index", "SalaryFilter")"><i class="fa fa-backward"></i> @ManagerResource.LB_GOBACK</a>

        <button type="submit" class="btn btn-outline-info pull-right">
            <i class="fa fa-floppy-o"></i> @ManagerResource.LB_SAVE
        </button>
    </div>
</div>