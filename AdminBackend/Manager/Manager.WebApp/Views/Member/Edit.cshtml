@using Manager.WebApp.Resources
@using Manager.WebApp.Settings
@using Manager.WebApp.Helpers.Business;
@model Manager.WebApp.Models.MemberEditModel

@{
    ViewBag.Title = ManagerResource.LB_UPDATE_INFO;
}

@Html.Partial("_Notifications")

@Html.Partial("../Widgets/Modals/_DefaultModal")

<div class="row">
    <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="m-portlet">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                            @ManagerResource.LB_INFORMATION
                        </h3>
                    </div>
                </div>
            </div>
            <!--begin::Form-->
            @using (Html.BeginForm("Edit", "Member", FormMethod.Post, new { @class = "m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                
                <div class="m-portlet__body">
                    <div class="form-group m-form__group row">
                        <div class="col-lg-3">
                            @Html.LabelFor(m => m.UserName, new { @class = "form-control-label" })
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-warning m-input" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>                       
                    </div>
                    <div class="form-group m-form__group row">
                        <div class="col-lg-3">
                            @Html.LabelFor(m => m.DisplayName, new { @class = "form-control-label" })
                            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control form-control-warning m-input" })
                            @Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-3">
                            @Html.LabelFor(m => m.Email, new { @class = "form-control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-warning m-input" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-3">
                            @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-control-label" })
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control form-control-warning m-input" })
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <div class="col-lg-6">
                            <label></label>
                            <div class="m-checkbox-inline">
                                <label class="m-checkbox">
                                    <input name="@Html.NameFor(m => m.Status)" @((Model.Status == 1) ? "checked" : null) value="1" type="checkbox">
                                    @ManagerResource.LB_ACTIVE
                                    <span></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <div class="col-lg-12">
                            <i class="text-danger">** Lưu ý: Nếu không nhập mật khẩu thì mật khẩu mặc định để đăng nhập sẽ là "123456"</i>
                        </div>
                    </div>
                </div>
                <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                    <div class="m-form__actions m-form__actions--solid">
                        <div class="row">
                            <div class="col-lg-6">
                                <a class="btn btn-danger" href="@Url.Action("Index", "Member")"><i class="la la-backward"></i> @ManagerResource.LB_GOBACK</a>
                                <button type="submit" class="btn btn-primary">
                                    @ManagerResource.LB_SAVE
                                </button>
                            </div>
                            <div class="col-lg-6 m--align-right">
                                <button type="reset" class="btn btn-danger">
                                    @ManagerResource.LB_RESET
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--end::Form-->
        </div>
        <!--end::Portlet-->
    </div>
</div>

@section PagePluginStyles
{

}

@section PageInlineScripts{

}

@section PagePluginScripts
 {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}