@helper RenderNavigation(List<IdentityNavigation> menuItems)
{
    if (menuItems != null && menuItems.Count > 0)
    {
        <ol class="dd-list">
            @foreach (var item in menuItems)
            {
                //var link = string.Format("/{0}/{1}", item.Controller, item.Action);
                //if (link == "//")
                //{
                //    link = string.Empty;
                //}

                var link = item.AbsoluteUri;
                if (item.ParentId == 0)
                {
                    <li class="dd-item item-orange" data-id="@item.Id">
                        <div class="dd-handle @((!item.Visible) ? " btn-yellow no-hover" : "")">
                            <span><i class="@item.IconCss"></i> @item.Title</span>
                            <div class="pull-right action-buttons dd-nodrag">
                                <a href="@link" target="_blank" style="color:#212121; padding-right:10px">
                                    @link
                                </a>
                                <a class="main-color" href="javascript:;" data-content="@item.Controller" onclick="ShowMenuLang(@item.Id);" title="@ManagerResource.LB_MULTI_LANGUAGES">
                                    <i class="ace-icon fa fa-language bigger-130" data-id="@item.Id"></i>
                                </a>
                                <a class="main-color" href="javascript:;" data-content="@item.Controller" onclick="Create(@item.Id);" title="@ManagerResource.LB_ADDNEW">
                                    <i class="ace-icon fa fa-plus bigger-130" data-id="@item.Id"></i>
                                </a>
                                <a class="main-color" href="javascript:;" onclick="Update(@item.Id);" title="@ManagerResource.LB_EDIT">
                                    <i class="ace-icon fa fa-pencil bigger-130" data-id="@item.Id"></i>
                                </a>

                                <a class="main-color btn-delete" data-href="@Url.Action("PopupDelete", "Navigation", new { id = item.Id })" data-modal="" title="@ManagerResource.LB_DELETE">
                                    <i class="ace-icon fa fa-trash-o bigger-130" data-id="@item.Id"></i>
                                </a>
                            </div>
                        </div>
                        @GetSubNavigations(menuItems, item.Id)
                    </li>
                }
            }
        </ol>
    }
}

@helper GetSubNavigations(List<IdentityNavigation> menuItems, int id)
{
    <ol class="dd-list">
        @foreach (var item in menuItems)
        {
            //var link = string.Format("/{0}/{1}", item.Controller, item.Action);
            //if (link == "//")
            //{
            //    link = string.Empty;
            //}
            var link = item.AbsoluteUri;

            if (item.ParentId == id)
            {
                <li class="dd-item" data-id="@item.Id">
                    <div class="dd-handle @((!item.Visible) ? " btn-yellow no-hover" : "")">
                        <span>@item.Title</span>
                        <div class="pull-right action-buttons dd-nodrag">
                            <a href="@link" target="_blank" style="color:#212121; padding-right:10px">
                                @link
                            </a>
                            <a class="main-color" href="#" data-content="@item.Controller" onclick="ShowMenuLang(@item.Id);" title="@ManagerResource.LB_MULTI_LANGUAGES">
                                <i class="ace-icon fa fa-language bigger-130" data-id="@item.Id"></i>
                            </a>
                            <a class="main-color" href="javascript:;" data-content="@item.Controller" onclick="Create(@item.Id);" title="@ManagerResource.LB_ADDNEW">
                                <i class="ace-icon fa fa-plus bigger-130" data-id="@item.Id"></i>
                            </a>
                            <a class="main-color" href="javascript:;" onclick="Update(@item.Id);" title="@ManagerResource.LB_EDIT">
                                <i class="ace-icon fa fa-pencil bigger-130" data-id="@item.Id"></i>
                            </a>

                            <a class="main-color btn-delete" data-href="@Url.Action("PopupDelete", "Navigation", new { id = item.Id })" title="@ManagerResource.LB_DELETE" data-modal="">
                                <i class="ace-icon fa fa-trash-o bigger-130" data-id="@item.Id"></i>
                            </a>
                        </div>
                    </div>
                    @GetSubNavigations(menuItems, item.Id)
                </li>
            }
        }
    </ol>
}

