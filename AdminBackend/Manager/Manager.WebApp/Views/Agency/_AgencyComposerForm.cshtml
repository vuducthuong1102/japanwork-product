@using Manager.WebApp.Resources
@using Manager.WebApp.Models
@using Manager.WebApp.Helpers
@model Manager.WebApp.Models.AgencyEditModel


@Html.AntiForgeryToken()
<div class="form-group m-form__group row">
    <label class="col-form-label col-lg-1 col-sm-12">
        @ManagerResource.LB_AVATAR
    </label>
    <div class="col-lg-11 col-md-11 col-sm-12">
        <div class="form-group">
            <img class="avatar-img" onerror="this.onerror=null;this.src='/Content/images/no-image.png';" src="@Model.Avatar" title="" />
        </div>
    </div>
</div>

<div class="form-group m-form__group row">
    <label class="col-form-label col-lg-1 col-sm-12">
        @ManagerResource.LB_NAME
    </label>
    <div class="col-lg-6 col-md-6 col-sm-12">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
    </div>
</div>

<div class="form-group m-form__group row">
    <label class="col-form-label col-lg-1 col-sm-12">
        @ManagerResource.LB_STATUS
    </label>
    <div class="col-lg-3 col-md-3 col-sm-12">
        <select name="@Html.NameFor(m => m.Status)" id="@Html.IdFor(m => m.Status)" class="form-control btn-white">
            @foreach (var item in Enum.GetValues(typeof(EnumStatus)))
            {
                var chkItem = (int)item;
                var chkStr = string.Empty;
                if (chkItem == Model.Status)
                {
                    chkStr = "selected";
                }
                <option value="@chkItem" @chkStr>@EnumExtensions.GetEnumDescription((Enum)item)</option>
            }
        </select>
    </div>
</div>

<div class="form-group m-form__group row">
    <label class="col-form-label col-lg-1 col-sm-12">
    </label>
    <div class="col-lg-3 col-md-3 col-sm-12">
        <button type="submit" class="btn btn-info">
            <i class="fa fa-floppy-o"></i> @ManagerResource.LB_SAVE
        </button>

        <a class="btn btn-secondary btn-back" data-back="@Url.Action("Index", "Agency")" href="javascript:;"><i class="fa fa-backward"></i> @ManagerResource.LB_GOBACK</a>
    </div>
</div>