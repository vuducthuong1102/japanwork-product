@using Manager.WebApp.Resources
@model Manager.WebApp.Models.ProjectCategoryEditModel

@{
    var title = ManagerResource.LB_EDIT;
    ViewBag.Title = title;
    ViewBag.HideSubHeader = true;
}

@Html.Partial("_Notifications")

@Html.Partial("../Widgets/Modals/_LargeModal")

<div class="m-portlet">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    @ManagerResource.LB_EDIT
                </h3>
            </div>
        </div>
    </div>

    <div class="m-portlet__body">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a href="#tab_1_1" class="nav-link active" data-toggle="tab"><i class="fa fa-cogs"></i> @ManagerResource.LB_GENERAL</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_1_1" role="tabpanel">
                @RenderBaseForm()
            </div>               
        </div>
    </div>

    
</div>
<!--end::Portlet-->

@section PageInlineStyles{
    
}

@helper RenderBaseForm(){
     <!--begin::Form-->
    using (Html.BeginForm("Edit", "ProjectCategory", FormMethod.Post, new { role = "form", @class = "m-form m-form--fit", id = "frmCreate", encType = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.Id)
        @Html.Partial("_ComposerForm")
    }

    <!--end::Form-->
}

@section PageInlineScripts{
    <script src="~/Scripts/Common/common.mediaselect.js"></script>
    <script>
        $("#Name").bind("input", function () {
            $("#UrlFriendly").val(slug($('#Name').val()));
        });
    </script>
}