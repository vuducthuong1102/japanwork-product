@using SingleSignOn.Resources
@model SingleSignOn.Models.ApiActiveAccountResponseModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-image: url('/Content/themes/images/cover.jpg'); background-size: cover; background-position: top center;">
    <div class="container" style="margin-top:10%">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-success">
                    <div class="panel-heading" style="text-align:center">
                        <h3 class="panel-title" style="font-size:24px;"><b>@UserWebResource.TEXT_VERIFY_EMAIL</b></h3>
                    </div>
                    <div class="panel-body">
                        <div class="notif-msg">
                            @if (Model.IsSuccess)
                            {
                                <div class="text-success" style="font-size: 18px;color: #212121;">
                                    @Model.Message
                                </div>
                            }
                            else
                            {
                                <div class="text-danger" style="font-size: 18px;">
                                    @Model.Message
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>